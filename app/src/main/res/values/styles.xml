<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="activityAnimationUpDown" parent="@android:style/Animation.Activity">
        <!-- 要启动的Activity的入场动画 -->
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <!-- 当前Activity结束的动画 -->
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <!-- 栈顶Activity的入场动画 -->
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <!-- 要结束的Activity的出场动画 -->
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>

    <!--progressBar-->
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!--<style name="AppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">-->
